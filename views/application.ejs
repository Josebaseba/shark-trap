<header class="main">

  <a href="#!/">
    <h2 class="app-title inline-block">Shark<span class="bold">Trap</span></h2>
    <img src="/images/shark-logo-sm.png" class="header-image" alt="shark logo" />
  </a>

  <span class="hover bold logout inline-block right margin-right">
    <a href="/logout" class="no-style">Logout</a>
  </span>

</header>

<section id="home" class="options">

  <div class="clearfix"></div>

  <a href="#!/download-song">
    <article class="songs opacity-bg hover">
      <span class="explanation text-center">
        <p>
          Download
          <br>
          Songs
        </p>
      </span>
    </article>
  </a>

  <a href="#!/download-playlist">
    <article class="playlist opacity-bg hover">
      <span class="explanation text-center">
        <p>
          Download
          <br>
          Playlists
        </p>
      </span>
    </article>
  </a>

  <a href="#!/playlists">
    <article class="my-playlist opacity-bg hover">
      <span class="explanation text-center">
        <p>
          Check My
          <br>
          Playlists
        </p>
      </span>
    </article>
  </a>

  <a href="#!/profile">
    <article class="profile opacity-bg hover">
      <span class="explanation text-center">
        <p>
          My
          <br>
          Profile
        </p>
      </span>
    </article>
  </a>

</section>

<section id="download-song" class="hidden text-center">

  <div class="clearfix"></div>

  <div class="clearfix"></div>

  <article class="song">

    <h2 class=" margin-top margin-bottom title">Download Song</h2>

    <form>

      <div class="error-msg inline-block text-center margin-bottom margin-bottom opacity-bg no-visibility">
        <span>Song name and artist required.</span>
      </div>

      <p>
        <input type="text" id="song-name" value="" placeholder="Song name">
      </p>

      <p>
        <input type="text" id="song-artist" value="" placeholder="Group">
      </p>

      <p>
        <input data-action="download" class="hover margin-top" type="button" value="Download!">
      </p>

      <p class="hover text-center">
        <span class="white fontawesome-arrow-left"></span>
        <a class="no-style" href="#!/">Go to home</a>
      </p>

    </form>

  </article>

</section>

<img class="logo-bottom" src="/images/shark-logo-bottom.png" alt="logo" />
